<Window x:Class="ONVIF_MediaProfilDashboard.ConfigDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ONVIF_MediaProfilDashboard"
        mc:Ignorable="d"
        Title="Media Profile Configuration DashBoard" Height="1200" Width="1000" FontSize="20">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="364*"/>
            <RowDefinition Height="181*"/>
            <RowDefinition Height="182*"/>
            <RowDefinition Height="442*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="48*"/>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="123*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="3" Fill="#FFB0B0B0" HorizontalAlignment="Left" Height="823" Margin="4,108,0,0" Stroke="Black" VerticalAlignment="Top" Width="618" Grid.ColumnSpan="2" Grid.RowSpan="4"/>
        <TextBlock x:Name="Media_Profile_Title" Grid.Column="3" HorizontalAlignment="Left" Margin="218,137,0,0" TextWrapping="Wrap" Text="Media Profile" VerticalAlignment="Top" FontSize="36" Height="48" Width="211" Grid.ColumnSpan="2"/>
        <Rectangle x:Name="EncoderConfiguration" Grid.Column="3" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="132" Margin="28,212,0,0" Stroke="Black" VerticalAlignment="Top" Width="262"/>
        <TextBlock x:Name="EncoderConfiguration1" Grid.Column="3" HorizontalAlignment="Left" Margin="136,238,0,0" TextWrapping="Wrap" Text="Video" VerticalAlignment="Top" RenderTransformOrigin="-0.302,0.077" FontSize="20" Height="27" Width="69"/>
        <TextBlock x:Name="EncoderConfiguration1_Copy" Grid.Column="3" HorizontalAlignment="Left" Margin="56,270,0,0" TextWrapping="Wrap" Text="EncoderConfiguration&#x9;" VerticalAlignment="Top" RenderTransformOrigin="-0.302,0.077" FontSize="20" Width="213" Height="31"/>
        <Rectangle x:Name="VideoSourceConfiguration" Grid.Column="4" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="132" Margin="14,212,0,0" Stroke="Black" VerticalAlignment="Top" Width="262"/>
        <Rectangle x:Name="EncoderConfiguration_Copy1" Grid.Column="3" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="132" Margin="28,28,0,0" Stroke="Black" VerticalAlignment="Top" Width="262" Grid.Row="1"/>
        <Rectangle x:Name="EncoderConfiguration_Copy2" Grid.Column="3" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="132" Margin="28,24,0,0" Stroke="Black" VerticalAlignment="Top" Width="262" Grid.Row="2"/>
        <Rectangle x:Name="EncoderConfiguration_Copy3" Grid.Column="4" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="132" Margin="14,28,0,0" Stroke="Black" VerticalAlignment="Top" Width="262" Grid.Row="1"/>
        <Rectangle x:Name="EncoderConfiguration_Copy4" Grid.Column="4" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="132" Margin="14,24,0,0" Stroke="Black" VerticalAlignment="Top" Width="262" Grid.Row="2"/>
        <Rectangle x:Name="EncoderConfiguration_Copy5" Grid.Column="3" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="132" Margin="28,21,0,0" Stroke="Black" VerticalAlignment="Top" Width="262" Grid.Row="3"/>
        <TextBlock x:Name="VSourceConfiguration" Grid.Column="4" HorizontalAlignment="Left" Margin="116,238,0,0" TextWrapping="Wrap" Text="Video" VerticalAlignment="Top" RenderTransformOrigin="-0.302,0.077" FontSize="20" Height="27" Width="58"/>
        <TextBlock x:Name="VDesc_EncoderConfiguration" Grid.Column="4" HorizontalAlignment="Left" Margin="48,270,0,0" TextWrapping="Wrap" Text="SourceConfiguration" VerticalAlignment="Top" RenderTransformOrigin="-0.302,0.077" FontSize="20" Width="200" Height="31"/>
        <Image Grid.ColumnSpan="4" Style="{DynamicResource ImageStyle1}" Margin="144,266,0,0" RenderTransformOrigin="0.74,0.74">
            <Image.Resources>
                <Style x:Key="ImageStyle1" TargetType="{x:Type Image}">
                    <Setter Property="FlowDirection" Value="RightToLeft"/>
                    <Setter Property="Source" Value="assets/img/arrow.png"/>
                    <Setter Property="StretchDirection" Value="DownOnly"/>
                    <Setter Property="HorizontalAlignment" Value="Left"/>
                    <Setter Property="Width" Value="50"/>
                    <Setter Property="Height" Value="50"/>
                    <Setter Property="VerticalAlignment" Value="Top"/>
                    <Setter Property="OpacityMask" Value="{x:Null}"/>
                    <Setter Property="UseLayoutRounding" Value="False"/>
                    <Setter Property="Margin" Value="122,244,0,0"/>
                </Style>
            </Image.Resources>
        </Image>
        <TextBlock Grid.ColumnSpan="3" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Bottom" Margin="29,0,53,54" Background="#FFCBC6C6" Height="31" Width="110" Text="Video" TextAlignment="Center" RenderTransformOrigin="0.474,0.903"/>
        <TextBox Grid.Column="3" HorizontalAlignment="Left" Height="42" Margin="47,290,0,0" Grid.Row="3" TextWrapping="Wrap" Text="{Binding VEncode, Mode=TwoWay}" VerticalAlignment="Top" Width="222"/>
    </Grid>
</Window>
