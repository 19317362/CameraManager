<Window x:Class="ONVIF_MediaProfilDashboard.InfoOption"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ONVIF_MediaProfilDashboard"
        mc:Ignorable="d"
        Title="Show Options" Height="586.763" Width="520.25" FontSize="20">
    <Grid RenderTransformOrigin="0.5,0.5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="107*"/>
            <ColumnDefinition Width="149*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="close_btn" Content="Close" Margin="157,0,157,10" RenderTransformOrigin="1.627,0.452" FontSize="16" Click="close_btn_Click" Height="34" VerticalAlignment="Bottom" Grid.ColumnSpan="2"/>
        <Label Content="Options Available (ReadOnly):" HorizontalAlignment="Left" Margin="8,20,0,0" VerticalAlignment="Top" FontSize="16" Height="34" Width="230" Grid.Column="1"/>
        <TextBox x:Name="options_txt" Margin="8,59,25,73" TextWrapping="Wrap" FontSize="12" Grid.Column="1"/>
        <ListBox x:Name="list_options_name" Margin="27,59,11,73" SelectionChanged="list_options_name_SelectionChanged"/>
        <Label Content="Option Name:" HorizontalAlignment="Left" Margin="27,20,0,0" VerticalAlignment="Top" FontSize="16" Height="34" Width="161"/>
    </Grid>
</Window>
